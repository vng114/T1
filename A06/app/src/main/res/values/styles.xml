<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="descriptionText">
        <item name="android:textColor">@color/description_color</item>
        <item name="android:textSize">@dimen/description_text</item>
    </style>
    <style name="valueText">
        <item name="android:textColor">@color/value_color</item>
        <item name="android:textSize">@dimen/value_text</item>
    </style>
</resources>
